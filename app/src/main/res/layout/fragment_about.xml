<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
     android:fitsSystemWindows="true">

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             android:layout_marginTop="10dp">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"
                     android:layout_marginTop="10dp">

                    <ImageView
                         android:layout_height="56dp"
                         android:layout_width="56dp"
                         android:src="@drawable/ic_logo_simple_24px"
                         android:layout_gravity="center_vertical" />

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:orientation="vertical"
                         android:layout_marginLeft="10dp"
                         android:layout_gravity="center_vertical">

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:textAppearance="?textAppearanceHeadlineMedium"
                             android:text="@string/app_name" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:textAppearance="?textAppearanceBodySmall"
                             android:id="@+id/buttomVersion"
                             android:text="version" />

                    </LinearLayout>

                </LinearLayout>

                <HorizontalScrollView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:scrollbars="none"
                     android:layout_marginBottom="10dp"
                     android:layout_marginTop="20dp">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             app:icon="@drawable/ic_twitter_24px"
                             android:layout_marginLeft="20dp"
                             android:layout_marginRight="4dp"
                             style="@style/Widget.Material3.Button.OutlinedButton"
                             android:id="@+id/buttomTwitterSimple"
                             android:text="Twitter" />

                        <com.google.android.material.button.MaterialButton
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             app:icon="@drawable/ic_github_24px"
                             android:layout_marginLeft="4dp"
                             android:layout_marginRight="4dp"
                             style="@style/Widget.Material3.Button.OutlinedButton"
                             android:id="@+id/buttomGithub"
                             android:text="GitHub" />

                        <com.google.android.material.button.MaterialButton
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             app:icon="@drawable/ic_telegram_24px"
                             android:layout_marginLeft="4dp"
                             android:layout_marginRight="4dp"
                             style="@style/Widget.Material3.Button.OutlinedButton"
                             android:id="@+id/buttomTelegram"
                             android:text="Telegram" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             android:layout_marginTop="10dp">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"
                     android:layout_marginTop="10dp">

                    <ImageView
                         android:layout_height="46dp"
                         android:layout_width="46dp"
                         android:src="@drawable/bolao_studio_logo"
                         android:layout_gravity="center_vertical" />

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:orientation="vertical"
                         android:layout_marginLeft="10dp"
                         android:layout_gravity="center_vertical">

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:textAppearance="?textAppearanceTitleMedium"
                             android:text="Alessandro RodrÃ­guez" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:textAppearance="?textAppearanceBodySmall"
                             android:text="@string/about_developer" />

                    </LinearLayout>

                </LinearLayout>

                <HorizontalScrollView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:scrollbars="none"
                     android:layout_marginBottom="10dp"
                     android:layout_marginTop="20dp">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             app:icon="@drawable/ic_twitter_24px"
                             android:layout_marginLeft="20dp"
                             android:layout_marginRight="4dp"
                             style="@style/Widget.Material3.Button.OutlinedButton"
                             android:id="@+id/buttomTwitter"
                             android:text="Twitter" />

                        <com.google.android.material.button.MaterialButton
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             app:icon="@drawable/ic_instagram_24px"
                             android:layout_marginLeft="4dp"
                             android:layout_marginRight="4dp"
                             style="@style/Widget.Material3.Button.OutlinedButton"
                             android:id="@+id/buttomInstagram"
                             android:text="Instagram" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:clickable="true"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             android:layout_marginTop="10dp"
             android:id="@+id/cardDonar">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:padding="10dp"
                 android:orientation="horizontal">

                <ImageView
                     android:layout_height="30dp"
                     android:layout_width="30dp"
                     android:src="@drawable/ic_gift_24px"
                     android:layout_marginRight="10dp"
                     android:layout_gravity="center_vertical" />

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="vertical"
                     android:layout_gravity="center_vertical">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textAppearance="?textAppearanceTitleMedium"
                         android:text="@string/about_contribuir_title" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textAppearance="?textAppearanceBodySmall"
                         android:text="@string/about_contribuir_subtitle" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textAppearance="?textAppearanceTitleLarge"
             android:layout_marginLeft="16dp"
             android:textColor="?attr/colorPrimary"
             android:layout_marginTop="10dp"
             android:text="@string/about_title" />

        <androidx.recyclerview.widget.RecyclerView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginTop="10dp"
             android:id="@+id/recyclerView" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>